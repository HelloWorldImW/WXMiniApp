    display: flex;
    flex: 1;
    justify-content:center;
    align-items:center
}
.content {
  width: 100%;  
}
.informationView {
    padding: 10px;
    word-wrap: break-word;
}
.prizeView {
    padding: 10px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.prizeImageView {
    height: 200px;
}
.view3 {
    
    word-wrap: break-word;
}
