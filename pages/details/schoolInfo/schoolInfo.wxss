    height: 100vh;
    width: 100%;
}
.topView {
    height: 200px;
    width: 100%;
    padding-left: 20px;
}
.topImage {
    width: 100%;
    height: 100%;
}
.navigationButton {
    background-color: #fff;
    display: flex;
