.headerContentView {
    padding-right: 20px;
    margin-top: 15px;
    margin-left: -6px;
    flex: 1;
    height: 150px;
    /* background-color: green; */
    display: flex;
}
.containContentView {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    border-width: 1px;
    border-style: solid;
    border-color: gainsboro;
    flex-direction: column;
    border-top-right-radius:3px;
    border-bottom-right-radius:3px;
}
.itemView {
    height: 20px;
    width: 100%;
    display: flex;
    flex-direction: row;
    
}
.itemHeadView {
    margin-left: 10px;
    background-color: purple;
    width: 80px;
    height: 20px;
    border-radius:4px;
    color: white;
    font-size: 16px;
    text-align: center;       
    line-height: 20px;       
}
.itemContentView {
    font-size: 16px;
    margin-left: 10px;
}
.titleView {
    margin-left: 10px;
    font-size: 28px;
    /* background-color: green; */
}
.priceView {
    margin: 10px;
    height: 30px;
    display: flex;
    flex-direction: row;
}
.nowPriceView {
    color: #1b82fb;
    font-size: 28px;
}
.prePriceView {
    margin-left: 10px;
    margin-top: 8px;
    color: gainsboro;
    font-size: 20px;
    text-decoration:line-through;      
}
.divorceLine {
    background-color: gainsboro;
    margin-top: 5px;
    height: 1px;
    width: 100%
}
.contentTitle {
    width: 100%;
    height: 40px;
