.headerView {
    padding-left: 10px;
    margin-top: 10px;
    height: 200px;
    width: 100%;
    /* background-color: red;  */
    display: flex;
    flex-direction: row;
}
.headerImageView {
    width: 120px;
    height: 180px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-size:100% 100%;

}
headerImageViewContain {
    position: absolute;
    top: 0;
    right: 0;
    width: 120px;
    height: 180px;
    /* background-color: blue */
}
.littleImage {
    width: 80px;
    height: 80px;
}
.littleClassName {
    height: 30px;
    
} 
.littleOrdernum {
    height: 20;
